<mujoco model="simple_slider">
    <compiler angle="radian"/>
    <option gravity="0 0 0" timestep="0.02"/>
    
    <worldbody>
        <light pos="0 0 3"/>
        <geom type="plane" size="2 2 0.1" rgba="0.9 0.9 0.9 1"/>
        
        <!-- Slider that can move left/right -->
        <body name="slider" pos="0 0 0.5">
            <joint name="slide" type="slide" axis="1 0 0" range="-2 2" damping="0.5"/>
            <geom type="box" size="0.1 0.1 0.1" rgba="0 0 1 1" mass="1"/>
        </body>
        
        <!-- Target position (visual only) -->
        <body name="target" pos="1.5 0 0.5">
            <geom type="sphere" size="0.05" rgba="1 0 0 1" contype="0" conaffinity="0"/>
        </body>
    </worldbody>
    
    <actuator>
        <motor joint="slide" gear="10" ctrllimited="true" ctrlrange="-1 1"/>
    </actuator>
</mujoco>
